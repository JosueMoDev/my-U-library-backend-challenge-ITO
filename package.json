  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "tsnd --respawn --clear --env-file=.env -r tsconfig-paths/register src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "yarn run build && node -r module-alias/register --env-file=.env dist/app.js"
  },
  "_moduleAliases": {
    "@domain/datasources": "dist/domain/datasources",
    "@domain/dtos": "dist/domain/dtos",
    "@domain/entities": "dist/domain/entities",
    "@domain/repositories": "dist/domain/repositories",
    "@domain/use-cases": "dist/domain/use-cases",
    "@infraestructure/datasourcesimpl": "dist/infraestructure/datasources",
    "@infraestructure/repositoriesimpl": "dist/infraestructure/repositories",
    "@handler-errors": "dist/domain/errors",
    "@app": "dist/presentation/app",
    "@presentation": "dist/presentation",
    "@middlewares": "dist/presentation/app/middlewares",
    "@config": "dist/config",
    "@api-documentation": "dist/presentation/doc"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "9.x",
    "globals": "^15.9.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.17.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/swagger-ui-express": "^4.1.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-jsonschema": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "env-var": "^7.5.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "openapi-types": "^12.1.3",
